<!DOCTYPE html>
<html lang="it">

<head>
  <!-- https://github.com/joshbuchea/HEAD -->

  <!-- Recommended -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Meta -->
  <meta name="description" content="{{ metadata.description }}" />
  <meta name="generator" content="{{ eleventy.generator }}" />

  <!-- Icons -->
  <!-- https://favicon.io/ -->
  <link rel="apple-touch-icon" sizes="180x180" href="{{ '/apple-touch-icon.png' | url }}" />
  <link rel="icon" type="image/png" sizes="32x32" href="{{ '/favicon-32x32.png' | url }}" />
  <link rel="manifest" href="{{ '/site.webmanifest' | url }}" />

  <title>{{ title or metadata.title }}</title>

  <link rel="stylesheet" href="/site.css" />
  <link rel="stylesheet" href="/style.css" />
</head>


<body class="antialiased bg-white font-sans text-gray-900">
  {% include '_top_header.njk' %}
  <main class="w-full">
    <!-- start header -->
    {% include '_common_header.njk' %}
    <!-- end header -->
    <!-- start hero -->
    <div class="bg-gray-100">
      <section class="cover bg-blue-teal-gradient relative px-4 sm:px-8 lg:px-16 xl:px-40 2xl:px-64 overflow-hidden py-24 flex
      items-center min-h-24 lg:min-h-[calc(100vh-12rem)]">
        <div class="absolute top-0 left-0 z-0 w-full h-full">
          <img src="images/cover-bg.jpg" alt="Colleferro" class="w-full h-full object-cover opacity-20">
        </div>

        <div class="lg:w-full xl:w-full relative z-10 h-100 lg:mt-8">
          <div>
            <h1 class="text-white text-2xl md:text-5xl xl:text-6xl font-bold leading-tight">
              {{ headline }}
            </h1>
            <p class="text-blue-100 text-xl text-bold md:text-4xl leading-snug mt-4">
              {{ subheadline }}
            </p>
          </div>
        </div>
      </section>
    </div>
    <!-- end hero -->    
    <!-- start about -->
  
    <section class="prose lg:prose-xl max-w-none relative px-4 py-4 sm:px-8 lg:px-16 xl:px-40 2xl:px-64 lg:py-12">
      {{ content | safe }}
    </section>
    <!-- end about -->
    <!-- start footer -->
    {% include '_common_footer.njk' %}
    <!-- end footer -->
  </main>
</body>
</html>

